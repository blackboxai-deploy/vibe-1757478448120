{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Categories for organizing projects, contracts, and documents"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "color": {
      "type": "string",
      "maxLength": 7,
      "regex": "^#[0-9A-Fa-f]{6}$"
    },
    "icon": {
      "type": "string",
      "maxLength": 50
    },
    "parentCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "childCategories"
    },
    "childCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parentCategory"
    },
    "subcategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subcategory.subcategory",
      "mappedBy": "category"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "categories"
    },
    "contracts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::contract.contract",
      "mappedBy": "categories"
    },
    "documents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::document.document",
      "mappedBy": "categories"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "permissions": {
      "type": "json"
    },
    "customAttributes": {
      "type": "json"
    },
    "metadata": {
      "type": "json"
    }
  }
}