{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tag",
    "description": "Tags for flexible labeling and filtering"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "color": {
      "type": "string",
      "maxLength": 7,
      "regex": "^#[0-9A-Fa-f]{6}$",
      "default": "#6B7280"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "tags"
    },
    "contracts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::contract.contract",
      "mappedBy": "tags"
    },
    "documents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::document.document",
      "mappedBy": "tags"
    },
    "notes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::note.note",
      "mappedBy": "tags"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "createdTags"
    },
    "usageCount": {
      "type": "integer",
      "default": 0
    },
    "customAttributes": {
      "type": "json"
    },
    "metadata": {
      "type": "json"
    }
  }
}